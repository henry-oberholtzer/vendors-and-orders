<!DOCTYPE html>

@{
  Layout = "_Layout";
}

<body>
  @using VendorTracker.Models;
  <ol class="list-group list-group-numbered">
    @if (Model.Count == 0)
    {

      <a href="/vendors/new"
        class="list-group-item d-flex justify-content-between align-items-start list-group-item-action">
        <div class="ms-2 me-auto">
          <div class="fw-bold">No Vendors Found</div>
          Would you like to add one?
        </div>
      </a>
    }
    else
    {
      @foreach (Vendor vendor in Model)
      {
        <a href="/vendors/@vendor.Id"
          class="list-group-item d-flex justify-content-between align-items-start list-group-item-action">
          <div class="ms-2 me-auto">
            <div class="fw-bold">@vendor.Name</div>
            @vendor.Description
          </div>
          <span class="badge bg-primary rounded-pill">@vendor.Orders.Count</span>
        </a>
      }
    }
  </ol>

</body>
