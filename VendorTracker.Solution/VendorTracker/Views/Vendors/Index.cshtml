<!DOCTYPE html>

@{
  Layout = "_Layout";
}

<body>
  @using VendorTracker.Models;

  @if (Model.Count == 0)
  {
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">No Vendors Found</h5>
        <a href="/vendors/new" class="card-link">Would you like to add one?</a>
      </div>
    </div>

  }
  else
  {
    @foreach (Vendor vendor in Model)
    {
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">@vendor.Name</h5>
          <p class="card-text">@vendor.Description</p>
          <a href="/vendors/@vendor.Id" class="card-link">View Orders</a>
          <form action="/vendors/@vendor.Id/delete" method="post">
            <button class="card-link text-danger">Delete</button>
          </form>
        </div>
      </div>
    }
  }


</body>
